#!/usr/bin/env ruby

require 'gli'
require 'flapjack/syrup'

include GLI::App

program_desc 'Command suite to manipulate your Flapjack notification system.'

version Flapjack::Syrup::VERSION

# http://naildrivin5.com/gli/rdoc/classes/GLI/App.html#method-i-subcommand_option_handling
subcommand_option_handling :normal

# http://naildrivin5.com/gli/rdoc/classes/GLI/App.html#method-i-synopsis_format
synopsis_format :compact

# loads *.rb from given directory.
# Splitting the UI out to separate files makes for easy reading.
# http://naildrivin5.com/gli/rdoc/classes/GLI/App.html#method-i-commands_from
#
commands_from "flapjack/syrup/ui"

exit run(ARGV)
